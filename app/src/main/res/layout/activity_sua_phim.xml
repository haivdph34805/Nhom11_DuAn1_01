<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaPhim"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnExit_suaPhim1"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back" />

        <ImageView

            android:id="@+id/anhPhim_Sua1"
            android:layout_width="170dp"
            android:layout_height="280dp"
            android:src="@drawable/add_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtID_Phim_sua1"
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext"
                android:hint="ID"
                android:paddingStart="20dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtTenPhim_sua1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edittext"
                android:hint="Tên Phim"
                android:paddingStart="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--        <androidx.appcompat.widget.AppCompatEditText-->
            <!--            android:id="@+id/txtTL"-->
            <!--            android:layout_width="200dp"-->
            <!--            android:layout_height="56dp"-->
            <!--            android:layout_marginTop="5dp"-->
            <!--            android:layout_marginStart="10dp"-->
            <!--            android:background="@drawable/edittext"-->
            <!--            android:hint="Thể Loại"-->
            <!--            android:paddingStart="30dp"-->
            <!--            />-->
            <Spinner
                android:id="@+id/spn_TheLoaiPhim1"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:paddingStart="30dp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtNgayPhatHanh_sua1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/edittext"
                android:hint="dd/MM/yyyy"
                android:paddingStart="15dp"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtDaoDien_sua1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edittext"
            android:hint="Đạo diễn "
            android:paddingStart="20dp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtMota_sua1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edittext"
            android:hint="Mô tả "
            android:paddingStart="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:gravity="end">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLuu_sua1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/add"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>